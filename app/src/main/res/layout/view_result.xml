<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/victory_defeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_victory_defeat"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/headerText" />

        <TextView
            android:id="@+id/time_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/victory_defeat"
            android:layout_marginTop="@dimen/back_button_margin"
            android:layout_centerHorizontal="true"
            android:text="@string/default_time_taken"
            />

    </RelativeLayout>


</RelativeLayout>